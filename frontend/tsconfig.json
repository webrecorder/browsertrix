{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "esnext",
    "target": "ES2018",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "useDefineForClassFields": false,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true,
        "rules": {
          "no-missing-import": "off",
        },
        "maxNodeModuleImportDepth": -1,
      },
    ],
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "~assets/*": ["./src/assets/*"],
    },
    "lib": ["DOM", "DOM.Iterable", "ES2021.WeakRef"],
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
}
