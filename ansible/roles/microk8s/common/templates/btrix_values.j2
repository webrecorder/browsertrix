ingress_class: "public"

mongo_auth:
  username: root
  password: example

ingress:
  host: "{{ domain }}"
  cert_email: "dev@webrecorder.net"
  scheme: "https"
  tls: true

# optional second-host for signing archives
{% if enable_signing %}
signer:
  enabled: true
  host: {{ signing_domain }}
  cert_email: {{ cert_email }}
  image_pull_policy: "IfNotPresent"
  auth_token: {{ signing_authtoken }}
{% endif %}
